{
  "manifest_version": 3,
  "name": "AntiConnections",
  "version": "1.0",
  "description": "Changes 'Connections' to 'Friends' on Roblox to counter the controversial update.",
  "permissions": ["scripting"],
  "host_permissions": [
    "https://roblox.com/*",
    "https://www.roblox.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://roblox.com/*", "https://www.roblox.com/*"],
      "js": ["Content.js"]
    }
  ]
}
